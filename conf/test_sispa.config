/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/viralrecon -profile test_sispa,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'

  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data to test SISPA/metagenomics analysis
  // uncomment when download logic implemented
  // input = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/samplesheet_full_sispa.csv'
  input = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/samplesheet_test_sispa.csv'
  protocol = 'metagenomic'

  // Genome references
  fasta = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/reference/NC_045512.2.fasta.gz'
  gff = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/reference/NC_045512.2.gff.gz'
  kraken2_db = 'https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/kraken2/kraken2_hs22.tar.gz'
}
